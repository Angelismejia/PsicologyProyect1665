@model PsychologyConsultation.Domain.Entities.SeccionSeguimiento

@{
    ViewData["Title"] = "Crear Sección de Seguimiento";
}

<h2>Crear Sección de Seguimiento</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observaciones" class="control-label"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Completada</label>
        <input asp-for="Completada" type="checkbox" class="form-check-input" value="true" />
        <input type="hidden" asp-for="Completada" value="false" />
        <span asp-validation-for="Completada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TratamientoId" class="control-label"></label>
        <input asp-for="TratamientoId" class="form-control" />
        <span asp-validation-for="TratamientoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
