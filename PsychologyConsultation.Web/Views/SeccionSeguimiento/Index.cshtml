@model IEnumerable<PsychologyConsultation.Domain.Entities.SeccionSeguimiento>

<!-- Imagen Principal -->
<div class="text-center" style="margin-bottom: 20px;">
    <img src="https://th.bing.com/th/id/R.075343f239d3cb090bc0c6bdce74320c?rik=i9kgEcR192ChPQ&pid=ImgRaw&r=0"
         alt="Imagen Principal"
         style="width: 100%; max-height: 300px; object-fit: cover; border-radius: 10px;">
</div>

<!-- Encabezado -->
<div class="text-center" style="background-color: #6A1B9A; padding: 20px; border-radius: 10px; margin-bottom: 20px;">
    <h1 style="color: white; font-family: 'Georgia', serif; margin: 0;">Lista de Secciones de Seguimiento</h1>
</div>

<!-- Botón Crear Nueva Sección -->
<div class="container text-right mb-3">
    <a href="@Url.Action("Create", "SeccionSeguimiento")" class="btn btn-primary"
       style="background-color: #6A1B9A; border-color: #6A1B9A; font-weight: bold;">
        Crear Nueva Sección
    </a>
</div>

<!-- Tabla de Secciones -->
<div class="container">
    <table class="table table-striped table-bordered">
        <thead style="background-color: #6A1B9A; color: white; text-align: center;">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Observaciones</th>
                <th>Completada</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center;">@item.Id</td>
                    <td style="text-align: center;">@item.Fecha?.ToString("dd/MM/yyyy")</td>
                    <td>@item.Observaciones</td>
                    <td style="text-align: center;">@(item.Completada ? "Sí" : "No")</td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Edit", "SeccionSeguimiento", new { id = item.Id })" class="btn btn-warning" style="margin-right: 5px;">Editar</a>
                        <a href="@Url.Action("Delete", "SeccionSeguimiento", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Estilos -->
<style>
    .btn-primary:hover {
        background-color: #4A148C;
        border-color: #4A148C;
    }

    .btn-warning:hover {
        background-color: #FFA000;
        border-color: #FFA000;
    }

    .btn-danger:hover {
        background-color: #D32F2F;
        border-color: #D32F2F;
    }

    table th, table td {
        vertical-align: middle;
    }

    table tr:hover {
        background-color: #f5f5f5;
    }
</style>
